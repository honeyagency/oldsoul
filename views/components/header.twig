<header class="header">
	<section class="section--header-wrap spacing--gutter-tab max-wrap margin--center flex flex--wrap justify--between align--items-center">
		<label class="menu--trigger hidden--dsk"><span></span></label>
		<h1 class="header--logo grid--sm-third"><a class="hdr-logo-link" href="/" rel="home" title="{{site.name}}"><i class="icon-logo" data-grunticon-embed></i></a></h1>
		<section class="navs grid--two-thirds grid--lg-half text--right dsk--flex flex--wrap justify--end">
			{% include 'components/sections/section--main-nav.twig' %}
			{% include 'components/sections/section--sub-nav.twig' %}
		</section>
		{# <i class="icon-cart hidden--dsk" data-grunticon-embed></i> #}
		{% do action('cart_count') %}
	</section>
</header>
{% if wc_notices %}
	<section class="section--cart-notice bg--green color--white text--center spacing--gutter spacing--vert-1">
		
		{% for item in wc_notices.success %}
			<div><strong>{{item.product.get_title}}</strong> {{item.message}} <a href="{{item.url}}" class="ha-button color--white font--small inline-block">{{item.cart}}</a></div>
			
		{% endfor %}
		
	</section>
{% endif %}