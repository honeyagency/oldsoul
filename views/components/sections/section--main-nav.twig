<nav role="navigation" class="section--main-nav grid--sm-three-fourths order--2">
	<ul class="dsk--flex flex--wrap justify--between ">
		{% for item in menu.get_items %}
			<li class="nav-item font--large font--serif {{item.classes | join(' ')}}">
				<a class="nav-link color--black" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
</nav><!-- #nav -->