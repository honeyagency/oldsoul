<nav role="navigation" class="section--main-nav grid--sm-three-fourths order--2">
	<ul class="dsk--flex flex--wrap justify--between ">
		{% for item in menu.get_items %}
			<li class="nav-item bg--brown-faded  {{item.classes | join(' ')}}">
				<a class="nav-link color--black bg--brown-faded font--large font--serif" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.title == 'Cafes' and item.current != true %}{% include 'components/sections/section--cafe-nav.twig' %}{% endif %}
				{% if item.get_children %}
					<label class="hidden--dsk trigger--children"><span>+</span></label>
					{% include 'components/sections/section--child-nav.twig' %}
				{% endif %}
			</li>
		{% endfor %}
	</ul>
	</nav><!-- #nav -->